/*
class Node  
{ 
    int data; 
    Node left, right; 
   
    public Node(int d)  
    { 
        data = d; 
        left = right = null; 
    } 
}
*/
class Solution
{
    static int minDiff(Node  root, int K) 
    {
        int res=Integer.MAX_VALUE;
        Node temp=root;
        while(temp!=null){
            if(temp.data==K)
            return 0;
            if(res>Math.abs(temp.data-K))
            res=Math.abs(temp.data-K);
            if(temp.data<K)
            temp=temp.right;
            else
            temp=temp.left;
        }
        return res;
    } 
}

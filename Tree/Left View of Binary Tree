/* A Binary Tree node
class Node
{
    int data;
    Node left, right;

    Node(int item)
    {
        data = item;
        left = right = null;
    }
}*/
class Tree
{
    ArrayList<Integer> leftView(Node root)
    {
        ArrayList<Integer> list=new ArrayList<>();
        if(root==null)
        return list;
        Queue<Node> q=new LinkedList<>();
        q.add(root);
        while(!q.isEmpty()){
            int s=q.size();
            for(int i=0;i<s;i++){
                Node level=q.remove();
                if(i==0)
                list.add(level.data);
                if(level.left!=null)
                q.add(level.left);
                if(level.right!=null)
                q.add(level.right);
            }
        }
        return list;
    }
}
